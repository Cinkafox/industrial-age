<controls:IndicatorProgressBar
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Systems.Indicators.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BoxContainer Orientation="Horizontal">
        <ProgressBar
            HorizontalExpand="True"
            MaxValue="1"
            MinHeight="25"
            MinValue="0"
            Name="Progress"
            Page="0"
            Value="0"
            VerticalAlignment="Center" />
        <Label
            Margin="10,0,0,0"
            Name="NameLabel"
            VerticalAlignment="Center" />
    </BoxContainer>
</controls:IndicatorProgressBar>